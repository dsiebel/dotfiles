; editorconfig.org
root = true

[*]
charset                     = utf-8
continuation_indent_size    = 4
end_of_line                 = lf
indent_size                 = 4
indent_style                = space
insert_final_newline        = true
max_line_length             = 120
tab_width                   = 4
trim_trailing_whitespace    = true

[dotgit*]
indent_size              = 2
indent_style             = space

[{Makefile, *.go}]
indent_style                = tab

[*.md]
trim_trailing_whitespace    = false

[{*.hcl,,*.json,*.md,*.neon,*.tf,*.toml,*.yaml,*.yml}]
indent_size                 = 2
indent_style                = space
tab_width                   = 2

[{*.yaml,*.yml}]
quote_type                  = single
